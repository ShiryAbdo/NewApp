<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.shaymaa.freelance.activities.MainActivity">
<include layout="@layout/toolbar_main"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:padding="2dp"
             android:scaleType="fitCenter"
            android:src="@drawable/back"
            tools:style="@style/AlertDialog.AppCompat" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/category_recycler_view"
            android:layout_margin="10dp"
            android:layout_width="0dp"
           android:layout_weight="5"
            android:layout_height="80dp"
            android:scrollbars="none" />

        <ImageView
            android:id="@+id/forword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:padding="2dp"
            android:src="@drawable/forwerd"
             android:layout_margin="1dp"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_height="wrap_content">

        <ImageView
        android:id="@+id/btime"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:src="@drawable/back"
        android:layout_margin="1dp"/>


        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="50dp"
            android:layout_gravity="center"
             android:textAlignment="center"
            android:padding="2dp"
            android:text="وقت الرحلة"
            android:layout_margin="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:baselineAligned="?attr/isLightTheme"
        android:orientation="horizontal"
        android:weightSum="8">

        <NumberPicker
             android:id="@+id/from"
            android:theme="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:solidColor="#ffffff" />


        <NumberPicker
            android:id="@+id/np"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <NumberPicker
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_height="wrap_content">

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:np_width="64dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/colorPrimary"
            app:np_formatter="@string/number_picker_formatter"
            app:np_max="59"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_textColor="@color/colorPrimary"
            app:np_textSize="@dimen/text_size"
            app:np_selectedTextSize="@dimen/selected_text_size"
            app:np_typeface="@string/roboto_light"
            app:np_value="3" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_height="wrap_content"></LinearLayout>




